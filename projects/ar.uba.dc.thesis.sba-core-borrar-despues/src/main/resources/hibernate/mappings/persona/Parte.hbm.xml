<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" package="sba.common.persona.core">

	<class abstract="true" name="Parte" table="PARTE">

		<id name="id">
			<generator class="sequence" />
		</id>

		<discriminator column="TIPO_PARTE" type="string" />

		<version name="persistenceVersion" column="VERSION_NUMBER" />
	</class>

</hibernate-mapping>