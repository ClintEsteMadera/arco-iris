<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" package="sba.common.persona.identificacion">

	<class name="InformacionImpositiva" table="INFO_IMPOSITIVA">

		<id name="id">
			<generator class="sequence" />
		</id>

		<version name="persistenceVersion" column="VERSION_NUMBER" />

		<property name="condicionAnteIVA" length="25" column="CONDICION_ANTE_IVA">
			<type name="sba.common.persistence.EnumUserType">
				<param name="enumClassName">
					sba.common.persona.identificacion.CondicionAnteIVA
				</param>
			</type>
		</property>

		<component name="ingresosBrutos"
			class="sba.common.persona.identificacion.IngresosBrutos" lazy="false" access="field">

			<property name="tipo" column="TIPO_INGRESOS_BRUTOS" />

			<property name="numero" column="NRO_INGRESOS_BRUTOS" />

			<property name="provincia" column="PROV_INGRESOS_BRUTOS">
				<type name="sba.common.persistence.EnumUserType">
					<param name="enumClassName">
						sba.common.pais.CountrySubdivision_AR
					</param>
				</type>
			</property>
		</component>

		<many-to-one name="identificadorImpositivo"
			column="IDENTIF_IMPOSITIVO_ID"
			class="sba.common.persona.identificacion.IdentificadorImpositivo"
			unique="true" not-null="true" cascade="all" lazy="false" access="field"/>

	</class>
</hibernate-mapping>
