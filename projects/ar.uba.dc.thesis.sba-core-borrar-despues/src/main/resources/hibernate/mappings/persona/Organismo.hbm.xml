<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" package="sba.common.persona.core">
	
	<subclass name="Organismo" extends="Parte" discriminator-value="ORGANISMO">
		<many-to-one name="identificadorImpositivo"
			column="IDENTIF_IMPOSITIVO_ID"
			class="sba.common.persona.identificacion.IdentificadorImpositivo"
			unique="true" not-null="true" cascade="all" lazy="false"/>

		<property name="denominacion" />

		<property name="descripcion" />
	</subclass>
</hibernate-mapping>