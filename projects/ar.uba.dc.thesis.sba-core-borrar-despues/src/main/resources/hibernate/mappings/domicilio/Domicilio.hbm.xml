<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" package="sba.common.domicilio">

	<class name="Domicilio" table="DOMICILIO">

		<id name="id">
			<generator class="sequence" />
		</id>

		<version name="persistenceVersion" column="VERSION_NUMBER" />

		<property name="calle" length="255" />

		<property name="nroCalle" column="NRO_CALLE" length="20"/>

		<property name="piso" length="20"/>

		<property name="depto" length="20"/>

		<property name="localidad" length="255" />

		<property name="codigoPostal" column="CODIGO_POSTAL" length="50" />

		<property name="pais" length="2" column="PAIS">
			<type name="sba.common.persistence.EnumUserType">
				<param name="enumClassName">
					sba.common.pais.Country
				</param>
			</type>
		</property>

		<property name="provincia" length="20" column="PROVINCIA">
			<type name="sba.common.persistence.EnumUserType">
				<param name="enumClassName">
					sba.common.pais.CountrySubdivision_AR
				</param>
			</type>
		</property>
		
		<property name="observaciones" length="1000"/>

	</class>

</hibernate-mapping>