<selfHealingConfiguration>
  <selfHealingScenario name="Client Experienced Response Time Scenario" enabled="true" priority="1">
    <concern>RESPONSE_TIME</concern>
    <stimulusSource>Any Client requesting news content</stimulusSource>
    <stimulus>GetNewsContentClientStimulus</stimulus>
    <environments>
      <environment name="ANY">
        <conditions/>
        <weights>
          <entry>
            <concern>CONTENT_FIDELITY</concern>
            <double>0.3333333333333333</double>
          </entry>
          <entry>
            <concern>SERVER_COST</concern>
            <double>0.3333333333333333</double>
          </entry>
          <entry>
            <concern>RESPONSE_TIME</concern>
            <double>0.3333333333333333</double>
          </entry>
        </weights>
        <heuristic>MOST</heuristic>
        <history/>
      </environment>
    </environments>
    <artifact name="ClientT" systemName="ZNewsSys"/>
    <response>Requested News Content</response>
    <responseMeasure>
      <description>Experienced response time is within threshold</description>
      <constraint class="numericBinaryRelationalConstraint">
        <artifact reference="../../../artifact"/>
        <property>experRespTime</property>
        <quantifier>IN_AVERAGE</quantifier>
        <binaryOperator>LESS_THAN</binaryOperator>
        <constantToCompareThePropertyWith class="int">500</constantToCompareThePropertyWith>
        <eAvgPropertyName>[EAvg]ClientT.experRespTime</eAvgPropertyName>
      </constraint>
    </responseMeasure>
    <architecturalDecisions/>
    <repairStrategy>QuickDirtyReduceResponseTime</repairStrategy>
    <repairStrategy>VariedReduceResponseTime</repairStrategy>
  </selfHealingScenario>
  <selfHealingScenario name="Server Cost Scenario" enabled="false" priority="2">
    <concern>SERVER_COST</concern>
    <stimulusSource>Anyone</stimulusSource>
    <stimulus>ANY</stimulus>
    <environments>
      <environment name="NORMAL">
        <conditions/>
        <weights>
          <entry>
            <concern>SERVER_COST</concern>
            <double>0.1</double>
          </entry>
          <entry>
            <concern>CONTENT_FIDELITY</concern>
            <double>0.3</double>
          </entry>
          <entry>
            <concern>RESPONSE_TIME</concern>
            <double>0.6</double>
          </entry>
        </weights>
        <heuristic>MOST</heuristic>
        <history/>
      </environment>
    </environments>
    <artifact name="ServerT" systemName="ZNewsSys"/>
    <response>The proper response for the request</response>
    <responseMeasure>
      <description>Active servers amount is within threshold</description>
      <constraint class="numericBinaryRelationalConstraint">
        <artifact reference="../../../artifact"/>
        <property>load</property>
        <quantifier>IN_AVERAGE</quantifier>
        <binaryOperator>LESS_THAN</binaryOperator>
        <constantToCompareThePropertyWith class="double">0.75</constantToCompareThePropertyWith>
        <eAvgPropertyName>[EAvg]ServerT.load</eAvgPropertyName>
      </constraint>
    </responseMeasure>
    <architecturalDecisions/>
    <repairStrategy>ReduceOverallCost</repairStrategy>
  </selfHealingScenario>
  <selfHealingScenario name="Fidelity Scenario" enabled="false" priority="3">
    <concern>CONTENT_FIDELITY</concern>
    <stimulusSource>Any Client requesting news content</stimulusSource>
    <stimulus>GetNewsContentClientStimulus</stimulus>
    <environments>
      <environment reference="../../../selfHealingScenario/environments/environment"/>
    </environments>
    <artifact reference="../../selfHealingScenario[2]/artifact"/>
    <response>Requested News Content</response>
    <responseMeasure>
      <description>Content Fidelity is within threshold</description>
      <constraint class="numericBinaryRelationalConstraint">
        <artifact reference="../../../../selfHealingScenario[2]/artifact"/>
        <property>fidelity</property>
        <quantifier>IN_AVERAGE</quantifier>
        <binaryOperator>LESS_THAN</binaryOperator>
        <constantToCompareThePropertyWith class="int">2</constantToCompareThePropertyWith>
        <eAvgPropertyName>[EAvg]ServerT.fidelity</eAvgPropertyName>
      </constraint>
    </responseMeasure>
    <architecturalDecisions/>
    <repairStrategy>ImproveOverallFidelity</repairStrategy>
  </selfHealingScenario>
</selfHealingConfiguration>