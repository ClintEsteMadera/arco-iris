<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="target" value="System.out"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{dd/MM/yyyy HH:mm:ss} - %5p - %C{1}.%M() - %m%n"/>
		</layout>
	</appender>

	<appender name="logfile" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="Threshold" value="DEBUG" />
		<param name="file" value="${java.io.tmpdir}/tomcat_logs/app.log"/>
		<param name="datePattern" value="'.'yyyy-MM-dd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{dd/MM/yyyy HH:mm:ss} - %5p - %C{1}.%M() - %m%n"/>
		</layout>
	</appender>

	<logger name="org.springframework">
		<level value="WARN" />
	</logger>


	<!-- habilita log de las validaciones en el alta/modificacion de un concepto -->
	<logger name="ar.uba.dc.thesis.scenariosUIWeb.common.ui.web.view.abm.JmesaFilterAdapter">
		<level value="DEBUG" />
	</logger>

	<!-- Ver SimpleMappingExceptionResolver.setWarnLogCategory y app-servlet.xml-->
	<logger name="exceptionResolver">
		<level value="WARN" />
	</logger>

	<root>
		<level value="INFO" />
		<appender-ref ref="console" />
		<appender-ref ref="logfile" />
	</root>

</log4j:configuration>

